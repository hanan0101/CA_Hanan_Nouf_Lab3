.data
string: .space 5            # Space for the original string (5 letters)
upper: .space 5             # Space for the converted string (5 letters)

.text
main:
    la t0, string             # Load address of small letters into x5
    la t1, upper              # Load address of capital letters into x6
    li t2, 5                 # Set count to 5 number of letters 

loop:
    lb t3, 0(t0)             # Load current letter
    addi t3, t3, -32         # Convert to capital letters (ASCII trick)
    sb t3, 0(t1)             # Save converted letter
    addi t0, t0, 1           # Move to the next letter in original
    addi t1, t1, 1           # Move to the next spot in capital
   addi t2, t2, -1           # Decrease count
    bnez t2, loop            
